<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btPertama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Pertama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btKedua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Kedua"
        app:layout_constraintStart_toEndOf="@+id/btPertama"
        app:layout_constraintTop_toBottomOf="@+id/btPertama"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btKetiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Ketiga"
        app:layout_constraintStart_toStartOf="@+id/btKedua"
        app:layout_constraintTop_toBottomOf="@+id/btKedua"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btKeempat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Keempat"
        app:layout_constraintStart_toStartOf="@+id/btKetiga"
        app:layout_constraintTop_toBottomOf="@+id/btKetiga"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>